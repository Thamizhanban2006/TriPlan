{
  "expo": {
    "name": "TriPlan",
    "slug": "triplan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "triplan",
    "web": {
      "bundler": "metro"
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.triplan.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TriPlan needs your location to show nearby transport options.",
        "NSLocationAlwaysUsageDescription": "TriPlan needs your location for real-time journey monitoring."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "package": "com.triplan.app",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": false
        }
      ],
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#0A0A0A",
          "sounds": [],
          "androidMode": "default",
          "androidCollapsedTitle": "TriPlan Guardian"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}